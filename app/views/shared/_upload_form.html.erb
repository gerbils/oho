<%= bootstrap_form_with(
  model: model,
  url: url,
  data: {controller: "file-upload"}) do |form| %>
  <div class="my-auto h-100">
    <h4><%= title %>`</h4>


    <div class="text-primary"><%= text %></div>

    <div>
      <%= form.file_field(
        multiple ? :files : :file,
        data: { action: "file-upload#check" },
        label: file_label,
        multiple: multiple,
        accept: accept,
        required: true) %>
    </div>

    <div>
      <%= form.submit(submit_label,
                      data: { file_upload_target: "submit" },
                      class: "mt-3 btn btn-primary",
                      disabled: true)%>
    </div>
  <% end %>
  </div>
