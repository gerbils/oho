
<div class="row justify-content-around">

<div class="row mt-5">
  <div class="col-lg-4 ms-auto me-auto">

    <h1 class="text-center text-secondary mb-5">Change Your Password</h1>

    <%= bootstrap_form_for(@password_holder, url: password_path, local: true, data: { turbo:false }, method: :patch) do |form| %>

      <div class="mb-5">
        <%= form.password_field :current_password, minlength: 8, required: true, autofocus: true, autocomplete: "current-password", class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.password_field :password, minlength: 8, required: true, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.password_field :password_confirmation, minlength: 8, required: true, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="mt-5">
        <%= form.submit "Set new password", class: "btn btn-primary w-100" %>
      </div>
    <% end %>

    <div class="text-center mt-4 pb-2 mb-2 border-top d-flex justify-content-between">
      <div><%= link_to "Forgot your password?", new_identity_password_reset_path %></div>
      <div><%= link_to "Back", root_path %></div
    </div>
  </div>
</div>


  <% if @user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% @user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

