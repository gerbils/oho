<% content_for :title, "Uploads" %>



<h1 class="h2 mt-5 mb-3">Uploads</h1>

<%= link_to("Upload a new file",
            new_royalties_lp_upload_path,
            class: "btn btn-primary mt-1 mb-4",
            data: { turbo_frame: "upload_modal" }) %>


<%= turbo_stream_from "uploads" %>

<table class="table table-striped">
  <thead>
    <tr>
      <th> Stmt date </th>
      <th> Uploaded </th>
      <th> Imported </th>
      <th> Status </th>
      <th> Channel </th>
      <th> Period </th>
      <th> STMT Total </th>
      <th> Uploaded file </th>
      <th></th>
    </tr>
  </thead>
  <tbody id="upload-list">
    <% @uploads.each do |upload| %>
      <%= render upload %>
    <% end %>
  </tbody>
</table>
<%= pagy_bootstrap_nav(@pagy).html_safe %>
